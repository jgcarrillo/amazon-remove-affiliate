<script>
  function cleanAmazonAffiliateUrl(url: string) {
    // Crear una URL válida
    const parsedUrl = new URL(url);

    // Extraer el pathname de la URL
    const pathname = parsedUrl.pathname;

    // Comprobar si el pathname contiene '/product/' o '/dp/'
    let productId = '';
    if (pathname.includes('/product/')) {
      productId = pathname.split('/product/')[1].split('/')[0];
    } else if (pathname.includes('/dp/')) {
      productId = pathname.split('/dp/')[1].split('/')[0];
    } else {
      return null; // Si la URL no contiene un ID de producto, retornar null
    }

    // Construir la URL limpia del producto
    const cleanUrl = `https://www.amazon.es/dp/${productId}`;
    return cleanUrl;
  }

  // Ejemplo de uso:
  const affiliateUrl1 =
    'https://www.amazon.es/gp/product/B000SM762A/ref=as_li_tl?ie=UTF8&camp=3638&creative=24630&creativeASIN=B000SM762A&linkCode=as2&tag=diegodoal00-21&linkId=c7691dd0be20e4a56ae781c03b5dec02';
  const affiliateUrl2 =
    'https://www.amazon.es/dp/B00US0G54M?linkCode=ssc&tag=onamzmejorrob-21&creativeASIN=B00US0G54M&asc_item-id=amzn1.ideas.1Y9SR6LURHELM&ref_=aip_sf_list_spv_ofs_mixed_d_asin&th=1';

  console.log(cleanAmazonAffiliateUrl(affiliateUrl1)); // Output: https://www.amazon.es/dp/B000SM762A
</script>
